<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote  name="github"
           fetch="https://github.com/" />

  <remote  name="gitlab"
           fetch="https://gitlab.com/" />

  <remote  name="colt"
           fetch="https://github.com/Colt-Enigma"
           revision="refs/heads/minimal" />

  <remote  name="arrow"
           fetch="https://github.com/ArrowOS"
           review="https://review.arrowos.net/"
           revision="refs/heads/arrow-13.1" />

  <remote  name="arrow-gitlab"
           fetch="https://gitlab.com/arrowos-project"
           review="https://review.arrowos.net/"
           revision="refs/heads/arrow-13.1" />

  <remote  name="colt-gitlab"
           fetch="https://gitlab.com/coltos"
           revision="refs/heads/minimal" />

  <remote name="lineage"
        fetch="https://github.com/LineageOS"
        revision="lineage-20.0" />
        
  <remote name="g-gitlab"
        fetch="https://gitlab.com/GhosutoX"
        revision="refs/heads/pyro" />

  <project path="manifest" name="platform_manifest" remote="colt" revision="minimal" />
  <project path="build/make" name="platform_build_make" remote="colt" revision="minimal" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="build/soong" name="platform_build_soong" groups="pdk,tradefed" remote="colt" revision="minimal" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <project path="bionic" name="platform_bionic" groups="pdk" remote="colt" revision="minimal" />
  <project path="bootable/recovery" name="platform_bootable_recovery" remote="colt" revision="minimal" />
  
  <!-- Frameworks -->
  <project path="frameworks/base" name="platform_frameworks_base" groups="pdk-cw-fs,pdk-fs" remote="colt" revision="minimal" />
  <project path="frameworks/av" name="platform_frameworks_av" groups="pdk-cw-fs,pdk-fs" remote="colt" revision="minimal" />
  <project path="frameworks/native" name="platform_frameworks_native" groups="pdk-cw-fs,pdk-fs" remote="colt" revision="minimal"/>
  <project path="frameworks/libs/systemui" name="platform_frameworks_libs_systemui" remote="colt" revision="minimal" />

  <!-- Device -->
  <project path="device/colt/sepolicy" name="platform_device_colt_sepolicy" remote="colt" revision="minimal" />
  <project path="device/qcom/sepolicy" name="platform_device_qcom_sepolicy" remote="colt" revision="minimal" />
  <project path="device/qcom/sepolicy-legacy-um" name="platform_device_qcom_sepolicy-legacy-um" remote="colt" revision="minimal" />
  <project path="device/qcom/sepolicy_vndr" name="platform_device_qcom_sepolicy_vndr" remote="colt" revision="minimal" />
  <project path="device/qcom/sepolicy_vndr-legacy-um" name="platform_device_qcom_sepolicy_vndr-legacy-um" remote="colt" revision="minimal" />

  <!-- Hardware -->
  <project path="hardware/colt/interfaces" name="platform_hardware_colt_interfaces" remote="colt" revision="minimal" />
  <project path="hardware/interfaces" name="platform_hardware_interfaces" remote="colt" revision="minimal" />

  <!-- Packages -->
  <project path="packages/apps/Aperture" name="platform_packages_apps_Aperture"  remote="colt" revision="minimal" />
  <project path="packages/apps/ColtEnigma" name="platform_packages_apps_ColtEnigma" remote="colt" revision="minimal" />
  <project path="packages/apps/GameSpace" name="platform_packages_apps_GameSpace" remote="colt" revision="minimal" />
  <project path="packages/apps/Launcher3" name="platform_packages_apps_Launcher3" remote="colt" revision="minimal" />
  <project path="packages/apps/ParanoidSense" name="platform_packages_apps_ParanoidSense" remote="colt-gitlab" />
  <project path="packages/apps/Settings" name="platform_packages_apps_Settings" remote="colt" revision="minimal" />
  <project path="packages/apps/ThemePicker" name="platform_packages_apps_ThemePicker" remote="colt" revision="minimal" />
  <project path="packages/services/OmniJaws" name="platform_packages_services_OmniJaws" remote="colt" revision="minimal" />
  <project path="packages/services/Telecomm" name="platform_packages_services_Telecomm" remote="colt" revision="minimal"/>

  <!-- Vendor -->
  <project path="vendor/colt" name="platform_vendor_colt" remote="colt" revision="minimal" />

  <!-- System -->
  <project path="system/sepolicy" name="platform_system_sepolicy" remote="colt" revision="minimal" />

</manifest>
